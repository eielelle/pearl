<%= form_with(model: event, class: "contents") do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul class="list-disc ml-6">
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:title].none?, "border-red-400 focus:outline-red-600": event.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:description].none?, "border-red-400 focus:outline-red-600": event.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :location %>
    <%= form.text_field :location, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:location].none?, "border-red-400 focus:outline-red-600": event.errors[:location].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :limit %>
    <%= form.number_field :limit, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:limit].none?, "border-red-400 focus:outline-red-600": event.errors[:limit].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :expiry %>
    <%= form.datetime_field :expiry, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:expiry].none?, "border-red-400 focus:outline-red-600": event.errors[:expiry].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :price %>
    <%= form.text_field :price, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:price].none?, "border-red-400 focus:outline-red-600": event.errors[:price].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :isPublished %>
    <%= form.checkbox :isPublished, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": event.errors[:isPublished].none?, "border-red-400 focus:outline-red-600": event.errors[:isPublished].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :isPublic %>
    <%= form.checkbox :isPublic, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": event.errors[:isPublic].none?, "border-red-400 focus:outline-red-600": event.errors[:isPublic].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :attendees %>
    <%= form.number_field :attendees, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:attendees].none?, "border-red-400 focus:outline-red-600": event.errors[:attendees].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :attending %>
    <%= form.number_field :attending, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:attending].none?, "border-red-400 focus:outline-red-600": event.errors[:attending].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :not_attending %>
    <%= form.number_field :not_attending, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": event.errors[:not_attending].none?, "border-red-400 focus:outline-red-600": event.errors[:not_attending].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
