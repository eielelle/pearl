<div id="<%= dom_id event %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= event.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= event.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Location:</strong>
    <%= event.location %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Limit:</strong>
    <%= event.limit %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Expiry:</strong>
    <%= event.expiry %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Price:</strong>
    <%= event.price %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Ispublished:</strong>
    <%= event.isPublished? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Ispublic:</strong>
    <%= event.isPublic? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Attendees:</strong>
    <%= event.attendees %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Attending:</strong>
    <%= event.attending %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Not attending:</strong>
    <%= event.not_attending %>
  </div>
</div>
